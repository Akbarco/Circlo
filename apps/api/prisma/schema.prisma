generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Roletype {
  ADMIN
  USER
  OWNER
  MEMBER
}

model Role {
  id          String        @id @default(uuid()) @db.Char(36)
  role        Roletype
  users       User[]
  roomMembers RoomMembers[]

  @@map("roles")
}

model User {
  id                  String          @id @default(uuid()) @db.Char(36)
  name                String
  email               String
  password            String
  photo               String
  role_id             String
  role                Role            @relation(fields: [role_id], references: [id])
  rooms               Room[]          @relation("userCreateRelation")
  roomMembers         RoomMembers[]
  roomMassages        RoomMassage[]
  passwordResets      PasswordReset[]
  transaction_owner   Transaction[]   @relation("TransactionOwnerRelation")
  transactions_member Transaction[]   @relation("TransactionMemberRelation")
  payouts             Payout[]

  @@map("users")
}

enum Grouptype {
  FREE
  PAID
}

model Group {
  id           String        @id @default(uuid()) @db.Char(36)
  name         String
  photo        String
  type         Grouptype
  about        String        @db.Text
  price        Int
  createdAt    DateTime      @default(now())
  groupAssets  GroupAssets[]
  transactions Transaction[]

  @@map("groups")
}

model GroupAssets {
  id       String @id @default(uuid()) @db.Char(36)
  group_id String
  group    Group  @relation(fields: [group_id], references: [id])
  filename String

  @@map("group_assets")
}

model Room {
  id              String        @id @default(uuid()) @db.Char(36)
  name            String?
  created_by      String
  created_by_user User          @relation("userCreateRelation", fields: [created_by], references: [id])
  createdAt       DateTime      @default(now())
  roomMembers     RoomMembers[]
  roomMassages    RoomMassage[]

  @@map("rooms")
}

model RoomMembers {
  id       String   @id @default(uuid()) @db.Char(36)
  room_id  String
  room     Room     @relation(fields: [room_id], references: [id])
  user_id  String
  user     User     @relation(fields: [user_id], references: [id])
  role_id  String
  role     Role     @relation(fields: [role_id], references: [id])
  joinetAt DateTime @default(now())

  @@map("room_members")
}

enum MassageType {
  Text
  IMAGE
}

model RoomMassage {
  id        String       @id @default(uuid()) @db.Char(36)
  room_id   String
  room      Room         @relation(fields: [room_id], references: [id])
  sender_id String
  sender    User         @relation(fields: [sender_id], references: [id])
  content   String       @db.Text
  type      MassageType? @default(Text)
  ceratedAt DateTime     @default(now())

  @@map("room_massages")
}

model PasswordReset {
  id      String @id @default(uuid()) @db.Char(36)
  user_id String
  user    User   @relation(fields: [user_id], references: [id])
  token   String

  @@map("user_password_resets")
}

enum TransactionsType {
  PENDING
  SUCCESS
  FAILED
}

model Transaction {
  id       String            @id @default(uuid()) @db.Char(36)
  owner_id String
  owner    User              @relation("TransactionOwnerRelation", fields: [owner_id], references: [id])
  user_id  String
  user     User              @relation("TransactionMemberRelation", fields: [user_id], references: [id])
  group_id String
  group    Group             @relation(fields: [group_id], references: [id])
  price    Int
  type     TransactionsType? @default(PENDING)
  cratedAt DateTime          @default(now())

  @@map("transactions")
}

model Payout {
  id                  String            @id @default(uuid()) @db.Char(36)
  user_id             String
  user                User              @relation(fields: [user_id], references: [id])
  amount              Int
  bank_name           String
  bank_account_number String
  bank_account_name   String
  status              TransactionsType? @default(PENDING)
  proof               String?           @db.Text
  date                DateTime          @default(now())
  @@map("payouts")
}
